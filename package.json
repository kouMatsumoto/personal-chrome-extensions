{
  "name": "personal-chrome-extensions",
  "version": "0.0.1",
  "description": "Experimental tools for me",
  "main": "index.js",
  "author": "kou matsumoto",
  "private": true,
  "engines": {
    "node": ">= 14.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "prebuild": "rm -fr dist && mkdir dist && yarn copy:manifest && yarn copy:html && yarn copy:images",
    "build": "webpack --config webpack.config.prod.js",
    "copy:html": "cp src/*.html dist",
    "copy:images": "cp images dist -R",
    "copy:manifest": "cp manifest.json dist/manifest.json",
    "dev": "yarn prebuild && webpack --config webpack.config.dev.js",
    "diff": "git diff --exit-code --name-only .",
    "format": "yarn lint:ts --fix && prettier --config .prettierrc --write .",
    "lint:ts": "eslint 'src/**/*.ts'",
    "test": "yarn jest -c jest.config.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "@types/chrome": "^0.0.114",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0-dev.20200608",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "fp-ts": "^2.6.2"
  }
}
